<div class="row">
  <div class="debate-chooser">
    <div class="small-12 medium-9 column summary-title">
      <h3><%= t("legislation.summary.comments_phase") %>
        <% if version %>
          (<%= t("legislation.summary.version") %> <%= version.title %>)</h3>
        <% end %>
        </div>
    <div class="small-12 medium-3 column">
      <h3><%= t("legislation.annotations.index.comments_count", count: comments.count) %></h3>
    </div>
    <div class="row">
      <div class="small-12 medium-11 column">
        <div class="debate-list">
          <% if annotations.present? %>
            <%= render "summary_text", process: process, comments: comments %>
          <% else %>
            <div class="callout primary">
              <p><%= t("legislation.summary.no_allegation") %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
