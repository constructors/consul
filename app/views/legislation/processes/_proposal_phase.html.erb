<div class="row">
  <div class="debate-chooser">
    <div class="summary-title small-12 medium-9 column">
      <h3><%= t("legislation.summary.proposal_phase") %></h3>
    </div>
    <div class="small-12 medium-3 column">
      <h3><%= t("legislation.proposals.total", count: proposals.count) %></h3>
  </div>
    <div class="row">
      <div class="small-12 medium-11 column">
        <div class="debate-list">
          <% if proposals.empty? %>
            <div class="callout primary">
              <p><%= t("legislation.processes.proposals.empty_proposals") %></p>
            </div>
          <% else %>
            <%= render "summary_proposal", proposals: proposals %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
