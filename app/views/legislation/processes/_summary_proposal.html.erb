<% proposals.sort_by_supports.each do |proposal| %>
  <div class="row">
    <div class="proposal">
      <div class="panel panel-summary" style="min-height: 5rem;">
        <div class="small-12 medium-9 column">
          <h3>
            <%= link_to proposal.title, legislation_process_proposal_path(proposal.legislation_process_id, proposal) %>
          </h3>
        </div>
        <div id="<%= dom_id(proposal) %>_votes" class="small-12 medium-3 column">
          <p class="centered_votes"> <%= proposal.votes_score %> <%= t("legislation.summary.votes") %> </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
